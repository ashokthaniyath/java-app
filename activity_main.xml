<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diwalibackground"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Diwali"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        style="@style/CardView"
        android:fontFamily="sans-serif-light"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join us in celebrating the Festival of"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv1"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Lights with your friends and family"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:id="@+id/tv2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evening 6pm"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv3"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Venue"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/black"
        android:accessibilityDataSensitive="yes"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/btn"
        />



</RelativeLayout>